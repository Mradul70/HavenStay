<% layout("/layouts/boilerplate") %>
<body>
    <div class="container my-5">
        <h3 class="mb-4">Booking Confirmation</h3>
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 300px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="text-muted mb-1"><%= listing.location %>, <%= listing.country %></p>
                        <p class="mb-0"><%= listing.description %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Booking Summary</h5>
                        <p class="mb-2">Price per night: <strong>₹<%= listing.price.toLocaleString("en-IN") %></strong></p>
                        <p class="mb-4 text-muted small">Total (1 night): <strong class="text-dark">₹<%= listing.price.toLocaleString("en-IN") %></strong></p>
                        <form method="POST" action="/listings/<%= listing._id %>/book/confirm">
                            <button type="submit" class="btn btn-success w-100 btn-lg">Confirm & Pay</button>
                        </form>
                        <a href="/listings/<%= listing._id %>" class="btn btn-outline-secondary w-100 mt-2">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
