<% layout("/layouts/boilerplate") %>
<body>
    <div class="container my-5">
        <div class="row">
            <!-- Left Column: Image, Title, Description, Action Buttons -->
            <div class="col-md-8">
                <img src="<%= listing.image.url %>" class="img-fluid rounded mb-4" alt="<%= listing.title %>" style="height: 500px; width: 100%; object-fit: cover;">
                <h3 class="mb-3"><%= listing.title %></h3>
                <p class="text-muted mb-4"><%= listing.description %></p>
                <div class="mb-3">
                    <p class="mb-2"><strong>Location:</strong> <%= listing.location %></p>
                    <p class="mb-2"><strong>Country:</strong> <%= listing.country %></p>
                </div>
                <div class="mt-4">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark me-2">Edit</a>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            
            <!-- Right Column: Booking Card -->
            <div class="col-md-4">
                <div class="card border shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Booking Details</h5>
                        <div class="mb-4">
                            <p class="text-muted mb-1">Price per night</p>
                            <h2 class="fw-bold">â‚¹<%= listing.price.toLocaleString("en-IN") %></h2>
                        </div>
                        <button class="btn btn-primary w-100 btn-lg">Book Now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
