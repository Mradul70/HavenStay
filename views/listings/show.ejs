<% layout("/layouts/boilerplate") %>
<body>
    <div class="container my-5">
        <div class="row">
            <!-- Left Column: Image, Title, Description, Action Buttons -->
            <div class="col-md-8">
                <img src="<%= listing.image.url %>" class="img-fluid rounded mb-4" alt="<%= listing.title %>" style="height: 500px; width: 100%; object-fit: cover;">
                <h3 class="mb-3"><%= listing.title %></h3>
                <p class="text-muted mb-4"><%= listing.description %></p>
                <div class="mb-3">
                    <p class="mb-2"><strong>Location:</strong> <%= listing.location %></p>
                    <p class="mb-2"><strong>Country:</strong> <%= listing.country %></p>
                </div>
                <div class="mt-4">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark me-2">Edit</a>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>

                <!-- Review Form -->
                <div class="mt-5">
                    <h4 class="mb-3">Leave a Review</h4>
                    <form method="POST" action="/listings/<%= listing._id %>/reviews">
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating: <span id="ratingValue">3</span>/5</label>
                            <input type="range" class="form-range" id="rating" name="review[rating]" min="1" max="5" value="3" step="1" required>
                        </div>
                        <div class="mb-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea class="form-control" id="comment" name="review[comment]" rows="4" placeholder="Write your review here..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Review</button>
                    </form>
                </div>

                <!-- Existing Reviews -->
                <div class="mt-5">
                    <h4 class="mb-3">Reviews</h4>
                    <% if (listing.reviews && listing.reviews.length > 0) { %>
                        <div class="row row-cols-1 g-3">
                            <% for (let review of listing.reviews) { %>
                                <div class="col">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <h6 class="card-title mb-1">
                                                        <% for (let i = 1; i <= 5; i++) { %>
                                                            <% if (i <= review.rating) { %>
                                                                <span class="text-warning">★</span>
                                                            <% } else { %>
                                                                <span class="text-muted">★</span>
                                                            <% } %>
                                                        <% } %>
                                                        <span class="ms-2"><%= review.rating %>/5</span>
                                                    </h6>
                                                    <small class="text-muted"><%= new Date(review.createdAt).toLocaleDateString() %></small>
                                                </div>
                                                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                                </form>
                                            </div>
                                            <p class="card-text"><%= review.comment %></p>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    <% } else { %>
                        <p class="text-muted">No reviews yet. Be the first to review!</p>
                    <% } %>
                </div>
            </div>
            
            <!-- Right Column: Booking Card -->
            <div class="col-md-4">
                <div class="card border shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Booking Details</h5>
                        <div class="mb-4">
                            <p class="text-muted mb-1">Price per night</p>
                            <h2 class="fw-bold">₹<%= listing.price.toLocaleString("en-IN") %></h2>
                        </div>
                        <button class="btn btn-primary w-100 btn-lg">Book Now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Update rating display when slider changes
        document.getElementById('rating').addEventListener('input', function(e) {
            document.getElementById('ratingValue').textContent = e.target.value;
        });
    </script>
</body>
